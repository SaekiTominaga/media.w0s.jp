{
	"include": ["node/@types/*.d.ts", "node/src/**/*.ts"],
	"compilerOptions": {
		/* Project Options */
		"incremental": true,
		"module": "ESNext",
		"outDir": "node/dist/",
		"target": "ESNext",

		/* Strict Checks */
		"strict": true,
		"alwaysStrict": false,

		/* Module Resolution */
		"esModuleInterop": true,
		"moduleResolution": "node",

		/* Linter Checks */
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* Advanced */
		"allowUnreachableCode": false,
		"forceConsistentCasingInFileNames": true,
		"newLine": "LF"
	}
}
