{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/common.json",
	"type": "object",
	"title": "media.w0s.jp",
	"required": ["port", "response", "static", "errorpage", "logger", "auth"],
	"properties": {
		"port": {
			"type": "integer",
			"minimum": 1,
			"maximum": 65535,
			"title": "HTTP サーバーのポート番号"
		},
		"response": {
			"type": "object",
			"title": "レスポンス",
			"required": ["header", "compression"],
			"properties": {
				"header": {
					"type": "object",
					"title": "レスポンスヘッダー",
					"required": ["hsts", "csp", "csp_html"],
					"properties": {
						"hsts": {
							"type": "string",
							"title": "Strict-Transport-Security"
						},
						"csp": {
							"type": "string",
							"title": "Content-Security-Policy (HTML 以外)"
						},
						"csp_html": {
							"type": "string",
							"title": "Content-Security-Policy (HTML)"
						}
					},
					"additionalProperties": false
				},
				"compression": {
					"type": "object",
					"title": "圧縮",
					"required": ["threshold"],
					"properties": {
						"threshold": {
							"type": "string",
							"title": "Threshold"
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"static": {
			"type": "object",
			"title": "静的ファイル",
			"required": ["root", "headers", "directory"],
			"properties": {
				"root": {
					"type": "string",
					"title": "ルートディレクトリ"
				},
				"directory": {
					"type": "object",
					"title": "メディアファイルの格納ディレクトリ（ルートディレクトリ基準、末尾のスラッシュなし）",
					"required": ["image", "audio", "video"],
					"properties": {
						"image": {
							"type": "string",
							"title": "画像ファイル"
						},
						"audio": {
							"type": "string",
							"title": "音声ファイル"
						},
						"video": {
							"type": "string",
							"title": "動画ファイル"
						}
					},
					"additionalProperties": false
				},
				"extensions": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ファイル拡張子のフォールバック（拡張子に . は付けない）"
				},
				"indexes": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"title": "ディレクトリのインデックスファイル名"
				},
				"headers": {
					"type": "object",
					"title": "レスポンスヘッダー関連",
					"required": ["mime"],
					"properties": {
						"mime": {
							"type": "object",
							"required": ["path", "extension"],
							"title": "MIME 定義",
							"properties": {
								"path": {
									"type": "object",
									"title": "MIME とファイルパスの紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "ファイルパス"
									}
								},
								"extension": {
									"type": "object",
									"title": "MIME と拡張子の紐付け",
									"additionalProperties": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"title": "拡張子（ドットなし）"
									}
								}
							},
							"additionalProperties": false
						},
						"cache_control": {
							"type": "object",
							"required": ["default", "path", "extension"],
							"title": "キャッシュ定義",
							"properties": {
								"default": {
									"type": "string",
									"title": "デフォルト値"
								},
								"path": {
									"type": "array",
									"items": {
										"type": "object",
										"required": ["paths", "value"],
										"properties": {
											"paths": {
												"type": "array",
												"items": {
													"type": "string"
												},
												"title": "拡張子"
											},
											"value": {
												"type": "string",
												"title": "値"
											}
										},
										"additionalProperties": false
									},
									"title": "ファイルパスによるキャッシュ定義"
								},
								"extension": {
									"type": "array",
									"items": {
										"type": "object",
										"required": ["extensions", "value"],
										"properties": {
											"extensions": {
												"type": "array",
												"items": {
													"type": "string"
												},
												"title": "拡張子"
											},
											"value": {
												"type": "string",
												"title": "値"
											}
										},
										"additionalProperties": false
									},
									"title": "拡張子によるキャッシュ定義"
								}
							},
							"additionalProperties": false
						}
					},
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		},
		"errorpage": {
			"type": "object",
			"title": "エラーページ",
			"required": ["path_403", "path_404"],
			"properties": {
				"path_403": {
					"type": "string",
					"title": "Filepath for `403 Forbidden`"
				},
				"path_404": {
					"type": "string",
					"title": "Filepath for `404 Not Found`"
				}
			},
			"additionalProperties": false
		},
		"logger": {
			"type": "object",
			"title": "Logger",
			"required": ["path"],
			"properties": {
				"path": {
					"type": "string",
					"title": "ファイルパス"
				}
			},
			"additionalProperties": false
		},
		"auth": {
			"type": "object",
			"title": "認証",
			"required": ["realm", "htpasswd_file", "json_401"],
			"properties": {
				"realm": {
					"type": "string",
					"title": "保護領域の説明文"
				},
				"htpasswd_file": {
					"type": "string",
					"title": "htpasswd ファイルのパス"
				},
				"json_401": {
					"type": "object",
					"title": "認証失敗時に返す JSON 内容"
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
