{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/thumb-image.json",
	"type": "object",
	"title": "サムネイル画像",
	"required": ["orig_dir", "thumb_dir", "type", "quality_default", "cache_control", "allow_origins", "referrer_exclusion_origins"],
	"properties": {
		"orig_dir": {
			"type": "string",
			"title": "オリジナル画像が保存されているルートディレクトリ"
		},
		"thumb_dir": {
			"type": "string",
			"title": "サムネイル画像を保存するルートディレクトリ"
		},
		"type": {
			"type": "object",
			"title": "ファイルの MIME や拡張子の定義",
			"additionalProperties": {
				"type": "object",
				"required": ["mime", "extension"],
				"properties": {
					"mime": {
						"type": "string",
						"title": "MIME"
					},
					"extension": {
						"type": "string",
						"title": "拡張子"
					}
				},
				"additionalProperties": false
			}
		},
		"quality_default": {
			"type": "integer",
			"minimum": 1,
			"maximum": 100,
			"title": "JPRG, WebP, AVIF の品質デフォルト値"
		},
		"cache_control": {
			"type": "string",
			"title": "Cache-Control レスポンスヘッダーの値"
		},
		"allow_origins": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"title": "開発環境のオリジン"
		},
		"referrer_exclusion_origins": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"title": "リファラーチェックで除外するオリジン"
		}
	},
	"additionalProperties": false
}
