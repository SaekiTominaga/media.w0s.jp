{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schema.w0s.jp/thumb-image.json",
	"type": "object",
	"title": "サムネイル画像",
	"required": ["orig_dir", "thumb_dir", "extension", "quality_default", "max_age", "allow_origins", "referrer_exclusion_origins"],
	"properties": {
		"orig_dir": {
			"type": "string",
			"title": "オリジナル画像が保存されているルートディレクトリ"
		},
		"thumb_dir": {
			"type": "string",
			"title": "サムネイル画像を保存するルートディレクトリ"
		},
		"extension": {
			"type": "object",
			"title": "ファイル拡張子の定義"
		},
		"quality_default": {
			"type": "integer",
			"minimum": 1,
			"maximum": 100,
			"title": "JPRG, WebP, AVIF の品質デフォルト値"
		},
		"max_age": {
			"type": "string",
			"title": ""
		},
		"allow_origins": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"title": "開発環境のオリジン"
		},
		"referrer_exclusion_origins": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"title": "リファラーチェックで除外するオリジン"
		}
	},
	"additionalProperties": false
}
