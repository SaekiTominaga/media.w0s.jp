{
	"name": "media.w0s.jp",
	"private": true,
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"watch": "tsc -w -p node/tsconfig.json",
		"build": "tsc -p node/tsconfig.json",
		"prelint": "npm run _config-convert",
		"lint": "eslint node/src/**/*.ts node/__tests__/*.test.js node/@types/*.d.ts",
		"pretest": "run-s _config-convert build",
		"test": "node --test --experimental-test-coverage",
		"config": "run-p _config-convert _config-validate:*",
		"css-lint": "stylelint public/*.css",
		"format": "prettier -w .",
		"github-actions-lint": "yamllint .github/workflows/*.yml",
		"_config-convert": "json2ts -i configure/schema -o configure/type",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:blog-upload": "ajv --spec=draft7 -s configure/schema/blog-upload.json -d configure/blog-upload.json",
		"_config-validate:thumb-image": "ajv --spec=draft7 -s configure/schema/thumb-image.json -d configure/thumb-image.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@w0s/file-size-format": "^2.0.1",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"ejs": "^3.1.10",
		"express": "^4.19.2",
		"express-validator": "^7.0.1",
		"htpasswd-js": "^1.0.2",
		"image-size": "^1.1.1",
		"log4js": "^6.9.1",
		"qs": "^6.12.1",
		"sharp": "^0.33.3",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"whatwg-mimetype": "^4.0.0"
	},
	"devDependencies": {
		"@types/basic-auth": "^1.1.8",
		"@types/compression": "^1.7.5",
		"@types/express": "^4.17.21",
		"@types/sharp": "^0.31.1",
		"@types/whatwg-mimetype": "^3.0.2",
		"@w0s/eslint-config": "^5.2.0",
		"@w0s/stylelint-config": "^4.7.0",
		"@w0s/tsconfig": "^1.4.1",
		"ajv-cli": "^5.0.0",
		"eslint": "^8.57.0",
		"json-schema-to-typescript": "^14.0.0",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"stylelint": "^16.6.1",
		"typescript": "^5.4.5",
		"yaml-lint": "^1.7.0"
	}
}
