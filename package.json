	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SaekiTominaga/media.w0s.jp.git"
	},
	"scripts": {
		"app:dev": "nodemon --inspect node/dist/app.js",
		"build-watch": "tsc -w -p node/tsconfig.json",
		"build-all": "tsc -p node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/__tests__/*.test.ts node/@types/*.d.ts",
		"test": "jest --coverage",
		"config-convert": "json2ts -i node/configure/schema -o node/configure/type",
		"config-validate": "run-p _config-validate:*",
		"css-lint": "stylelint public/*.css",
		"_config-validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"_config-validate:blog-upload": "ajv --spec=draft7 -s node/configure/schema/blog-upload.json -d node/configure/blog-upload.json",
		"_config-validate:thumb-image": "ajv --spec=draft7 -s node/configure/schema/thumb-image.json -d node/configure/thumb-image.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/file-size-format": "^1.1.2",
		"@saekitominaga/mime-parser": "^1.2.3",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"ejs": "^3.1.8",
		"express": "^4.18.2",
		"express-validator": "^6.14.2",
		"htpasswd-js": "^1.0.2",
		"image-size": "^1.0.2",
		"log4js": "^6.7.0",
		"qs": "^6.11.0",
		"sharp": "^0.31.2",
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.2"
	},
	"devDependencies": {
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.14",
		"@types/jest": "^29.2.2",
		"@types/sharp": "^0.31.0",
		"@w0s/stylelint-config": "^1.0.2",
		"@w0s/tsconfig": "^1.0.1",
		"ajv-cli": "^5.0.0",
		"coveralls": "^3.1.1",
		"eslint-config-w0s": "^1.0.8",
		"jest": "^29.3.1",
		"json-schema-to-typescript": "^11.0.2",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"ts-jest": "^29.0.3",
		"typescript": "^4.8.4"
	}
}
