{
	"name": "media.w0s.jp",
	"private": true,
	"type": "module",
	"scripts": {
		"app": "nodemon --inspect node/dist/app.js",
		"watch": "tsc -w -p node/tsconfig.json",
		"build": "tsc -p node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/__tests__/*.test.js node/@types/*.d.ts",
		"test": "npm run config-convert && npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
		"config-convert": "json2ts -i configure/schema -o configure/type",
		"config-validate": "run-p _config-validate:*",
		"css-lint": "stylelint public/*.css",
		"github-actions-lint": "yamllint .github/workflows/*.yml",
		"_config-validate:common": "ajv --spec=draft7 -s configure/schema/common.json -d configure/common.json",
		"_config-validate:blog-upload": "ajv --spec=draft7 -s configure/schema/blog-upload.json -d configure/blog-upload.json",
		"_config-validate:thumb-image": "ajv --spec=draft7 -s configure/schema/thumb-image.json -d configure/thumb-image.json"
	},
	"dependencies": {
		"@log4js-node/smtp": "^2.0.8",
		"@saekitominaga/file-size-format": "^1.1.2",
		"@saekitominaga/mime-parser": "^1.2.3",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-validator": "^7.0.1",
		"htpasswd-js": "^1.0.2",
		"image-size": "^1.0.2",
		"log4js": "^6.9.1",
		"qs": "^6.11.2",
		"sharp": "^0.32.1",
		"sqlite": "^4.2.1",
		"sqlite3": "^5.1.6"
	},
	"devDependencies": {
		"@types/basic-auth": "^1.1.3",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/sharp": "^0.31.1",
		"@w0s/eslint-config": "^2.0.0",
		"@w0s/stylelint-config": "^1.2.0",
		"@w0s/tsconfig": "^1.0.1",
		"ajv-cli": "^5.0.0",
		"coveralls": "^3.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.43.0",
		"jest": "^29.5.0",
		"json-schema-to-typescript": "^13.0.1",
		"nodemon": "^2.0.22",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"stylelint": "^15.9.0",
		"typescript": "^5.0.4",
		"yaml-lint": "^1.7.0"
	}
}
