	},
	"scripts": {
		"app:dev": "nodemon --inspect node/dist/app.js",
		"build": "tsc",
		"build:watch": "tsc -w",
		"config:tsconvert": "json2ts -i node/configure/schema -o node/configure/type",
		"config:validate:common": "ajv --spec=draft7 -s node/configure/schema/common.json -d node/configure/common.json",
		"config:validate:blog-upload": "ajv --spec=draft7 -s node/configure/schema/blog-upload.json -d node/configure/blog-upload.json",
		"config:validate:thumb-image": "ajv --spec=draft7 -s node/configure/schema/thumb-image.json -d node/configure/thumb-image.json",
		"test": "jest --coverage"
	},
	"dependencies": {
		"@log4js-node/smtp": "^1.1.0",
		"@saekitominaga/file-size-format": "^1.0.2",
		"@saekitominaga/mime-parser": "^1.1.1",
		"basic-auth": "^2.0.1",
		"compression": "^1.7.4",
		"ejs": "^3.1.6",
		"express": "^4.17.1",
		"express-validator": "^6.13.0",
		"htpasswd-js": "^1.0.2",
		"image-size": "^1.0.0",
		"log4js": "^6.3.0",
		"sharp": "^0.29.2",
		"sqlite": "^4.0.23",
		"sqlite3": "^5.0.2"
