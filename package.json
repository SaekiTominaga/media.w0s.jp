	"scripts": {
		"dev": "tsx --watch --tsconfig node/tsconfig.json node/src/app.ts",
		"prebuild": "rimraf node/dist/* -g",
		"build": "tsc -p node/tsconfig.json",
		"lint": "eslint node/src/**/*.ts node/@types/*.d.ts",
		"pretest": "npm run build",
